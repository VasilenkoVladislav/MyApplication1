<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.myapplication1.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First"
        android:id="@+id/firstbutton"
        android:layout_marginTop="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:onClick="GoSecondpageOne"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second"
        android:id="@+id/secondbutton"
        android:onClick="GoSecondpageTwo"
        android:layout_above="@+id/textViewres"
        android:layout_alignLeft="@+id/firstbutton"
        android:layout_alignStart="@+id/firstbutton"
        android:layout_marginBottom="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Here is the text"
        android:id="@+id/textViewres"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/secondbutton"
        android:layout_alignStart="@+id/secondbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Third"
        android:id="@+id/thirdbutton2"
        android:onClick="GoSecondpageThree"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/textViewres"
        android:layout_alignLeft="@+id/textViewres"
        android:layout_alignStart="@+id/textViewres" />

</RelativeLayout>
